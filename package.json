{
  "name": "world-engine-mvp",
  "version": "0.1.0",
  "private": true,
  "description": "MVP scaffold for world engine IDE with React, TypeScript, Three.js",
  "author": "world-engine contributors",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "dev:frontend": "pnpm --filter frontend/ide dev",
    "start:backend": "node --loader ts-node/esm ./backend/api/world_service/index.ts",
    "test:math": "jest tests/math --runInBand --coverage",
    "test": "pnpm test:math",
    "bench:math": "node scripts/run-math-benchmarks.js",
    "lint": "eslint . --ext .ts,.tsx",
    "typecheck": "tsc --noEmit",
    "clean": "pnpm -r exec rm -rf dist node_modules .next .turbo"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.1.0"
  },
  "workspaces": {
    "packages": [
      "engine",
      "backend",
      "frontend/ide"
    ]
  }
}
